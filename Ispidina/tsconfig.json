{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*",
        "./src/assets/@types/discord.d.ts"
    ]
}